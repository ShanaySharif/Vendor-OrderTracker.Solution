@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Venors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  
  
}
<h2><a href='/vendors/new'>Add a new vendor </a></h2>
<p><a href='/'>Back home</a></p>